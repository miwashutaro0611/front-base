//- layout data
include _data/_variable
include _data/_meta
include _data/_gtm
//- components
include /_modules/_GlobalHeader
include /_modules/_GlobalFooter


block variables
  -
    var bodyClass = (relativePath.match(/^[a-zA-Z0-1\-\_]*?(?=\/)/) || 'top') + 'BodyWrapper'
doctype html
html(lang="ja")
  head
    +meta(path)
    script(src=path+"assets/js/head.js")
  body(class=bodyClass)
    +gtm
    +GlobalHeader(path)
    .wrappper(data-barba="wrapper")
      main(data-barba="container" data-barba-namespace=pageName)
        block content
    +GlobalFooter(path)
    script(src=path+"assets/js/bundle.js")
    script(src='//instant.page/1.1.0', type='module', integrity='sha384-EwBObn5QAxP8f09iemwAJljc+sU+eUXeL9vSBw1eNmVarwhKk2F9vBEpaN9rsrtp')