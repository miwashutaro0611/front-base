//layout data
include _data/_meta
include _data/_gtm
// components
include /components/Organisms/GlobalHeader/index
include /components/Organisms/GlobalFooter/index

block variables
  - 
    var bodyClass = (relativePath.match(/^[a-zA-Z0-1\-\_]*?(?=\/)/) || 'top') + 'BodyWrapper'
doctype html
html(lang="ja")
  head
    +meta(path)
  body(class=bodyClass)
    +gtm
    +GlobalHeader(path)
    block content
    +GlobalFooter(path)