{
  "name": "front-base",
  "engines": {
    "npm": "please_use_yarn_instead",
    "node": "16.13.1"
  },
  "private": true,
  "scripts": {
    "build": "rm -rf dist/ && webpack --config webpack.prod.js",
    "build:develop": "rm -rf dist/ && webpack --config webpack.dev.js",
    "deploy": "webpack --config webpack.prod.js && mv ._headers dist/_headers",
    "deploy:master": "yarn script-image && webpack --config webpack.prod.js",
    "dev": "yarn script-image && webpack-dev-server --config webpack.dev.js",
    "lint": "run-p lint:*",
    "lint:js": "eslint --fix --ext .js,.ts --ignore-path .gitignore .",
    "lint:package": "fixpack",
    "lint:pug": "prettier --write '**/*.pug'",
    "lint:style": "stylelint --fix '**/*.{scss,css}' --ignore-path .gitignore",
    "script": "run-p script:*",
    "script-image": "run-p script-image:*",
    "script-image:squoosh-min": "node ./script/squoosh-min.mjs",
    "script-image:squoosh-webp-avif": "node ./script/squoosh-webp-avif.mjs",
    "test": "jest",
    "test:ci": "jest -i --ci --runInBand"
  },
  "dependencies": {
    "@barba/core": "^2.9.7",
    "@barba/css": "^2.1.15",
    "@barba/prefetch": "^2.1.10",
    "autoprefixer": "^10.4.2",
    "luxy.js": "^0.1.0",
    "picturefill": "^3.0.3",
    "ua-parser-js": "^0.7.31",
    "viewport-extra": "^2.1.1",
    "what-input": "^5.2.10"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/runtime": "^7.16.7",
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@prettier/plugin-pug": "^1.19.1",
    "@squoosh/lib": "^0.4.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.19",
    "@types/ua-parser-js": "^0.7.36",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^3.4.1",
    "fixpack": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "7.0.4",
    "jest": "^27.0.6",
    "jest-junit": "^12.3.0",
    "lint-staged": "^11.2.6",
    "mini-css-extract-plugin": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "os": "^0.1.2",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.3.2",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "sass": "^1.49.11",
    "sass-loader": "12.6.0",
    "style-loader": "^3.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recess-order": "^2.6.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-no-unsupported-browser-features": "^5.0.2",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.21.0",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "typescript-require": "^0.3.0",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpack-merge": "^5.8.0",
    "yarn": "^1.22.17"
  },
  "lint-staged": {
    "*.pug": "yarn lint:pug",
    "*.scss": "yarn lint:style",
    "*.ts": "yarn lint:js",
    "*.spec.ts": "yarn test",
    "package.json": "yarn lint:package"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "UNLICENSED"
}
